# Mem0 本地开发环境配置
# 复制此文件为 .env 并填入真实的API密钥

# ========================
# LLM API 配置
# ========================

# 豆包/火山引擎 API (推荐用于中文)
DOUBAO_API_KEY=your_doubao_api_key_here
ARK_API_KEY=your_ark_api_key_here
DOUBAO_API_BASE=https://ark.cn-beijing.volces.com/api/v3

# OpenAI API (备选方案)
OPENAI_API_KEY=your_openai_api_key_here

# ========================
# Mem0 配置
# ========================

# LLM 配置
MEM0_LLM_PROVIDER=doubao
MEM0_LLM_MODEL=doubao-pro-32k

# 嵌入模型配置 (本地运行)
MEM0_EMBEDDER_PROVIDER=huggingface
MEM0_EMBEDDER_MODEL=BAAI/bge-large-zh-v1.5

# 向量数据库配置
MEM0_VECTOR_STORE_PROVIDER=qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ========================
# 开发环境配置
# ========================

# 数据存储目录
MEM0_DIR=./data

# 日志级别
LOG_LEVEL=DEBUG
DEBUG=1

# HuggingFace 配置
HF_HOME=/root/.cache/huggingface
TRANSFORMERS_CACHE=/root/.cache/torch/transformers

# ========================
# 可选服务配置
# ========================

# Redis 缓存 (可选)
REDIS_HOST=redis
REDIS_PORT=6379

# 数据库配置 (可选)
DATABASE_URL=sqlite:///./data/mem0.db